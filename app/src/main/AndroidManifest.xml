<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tech.thrithvam.santhidigicatalogue">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />

 <supports-screens
     android:largeScreens="true"
     android:normalScreens="true"
     android:smallScreens="true"
     android:xlargeScreens="true"/>



    <application
        android:name="com.tech.thrithvam.santhidigicatalogue.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.tech.thrithvam.santhidigicatalogue.SplashScreen"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tech.thrithvam.santhidigicatalogue.Home"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.tech.thrithvam.santhidigicatalogue.User"
            android:configChanges="orientation|screenSize"
            android:noHistory="true"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.tech.thrithvam.santhidigicatalogue.ItemDetails"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.tech.thrithvam.santhidigicatalogue.ImageViewer"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.tech.thrithvam.santhidigicatalogue.BoutiqueDetails"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.tech.thrithvam.santhidigicatalogue.OwnerAndDesigner"
            android:configChanges="orientation|screenSize" />

        <service
            android:name="com.tech.thrithvam.santhidigicatalogue.Services"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="com.tech.thrithvam.santhidigicatalogue.GridOfProducts"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.tech.thrithvam.santhidigicatalogue.OrderStatus"
            android:configChanges="orientation|screenSize"
            android:label="My Orders " />
        <activity
            android:name="com.tech.thrithvam.santhidigicatalogue.OrderProductList"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.tech.thrithvam.santhidigicatalogue.ProductReviews"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.tech.thrithvam.santhidigicatalogue.Chat"
            android:configChanges="orientation|screenSize"
            android:label="Chat with us" />
        <activity
            android:name="com.tech.thrithvam.santhidigicatalogue.Cart"
            android:configChanges="orientation|screenSize"
            android:label="Your Cart" />
        <activity
            android:name="com.tech.thrithvam.santhidigicatalogue.Checkout"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name="com.tech.thrithvam.santhidigicatalogue.NetworkError"
            android:screenOrientation="portrait"/>
        <activity android:name="com.tech.thrithvam.santhidigicatalogue.ItemDetailsWithCartBuy"
            android:configChanges="orientation|screenSize"/>
        <activity android:name="com.tech.thrithvam.santhidigicatalogue.EnquiryItem"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"/>
        <activity android:name="com.tech.thrithvam.santhidigicatalogue.EnquiryConfirm"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"/>
        <activity android:name="com.tech.thrithvam.santhidigicatalogue.EnquiryFailed"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"/>

    </application>

</manifest>