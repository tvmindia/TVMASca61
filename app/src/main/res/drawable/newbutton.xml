<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#f208ad" />
            <gradient android:angle="-90" android:startColor="#ed0baa" android:endColor="#f508af"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#f205ab" />
            <solid android:color="#f20aad"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#f206ac" />
            <gradient android:angle="-90" android:startColor="#f205ab" android:endColor="#f506b0" />
        </shape>
    </item>
</selector>