<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="5dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:scaleType="centerInside"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/productImg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="productName"
            android:id="@+id/productName"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignTop="@+id/productImg"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/productImg"
            android:layout_toEndOf="@+id/productImg"
            android:textColor="@color/primary_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="11sp"
            android:textColor="@color/primary_text"
            android:text="productNo"
            android:id="@+id/productNo"
            android:layout_below="@+id/productName"
            android:layout_alignLeft="@+id/productName"
            android:layout_alignStart="@+id/productName" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/primary_text"
            android:text="product type"
            android:id="@+id/type"
            android:layout_below="@+id/productNo"
            android:layout_alignLeft="@+id/productNo"
            android:layout_alignStart="@+id/productNo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/primary_text"
            android:text="quantity"
            android:id="@+id/quantity"
            android:layout_below="@+id/type"
            android:layout_alignLeft="@+id/productNo"
            android:layout_alignStart="@+id/productNo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/primary_text"
            android:text="productPrice"
            android:id="@+id/productPrice"
            android:gravity="end"
            android:layout_below="@+id/productName"

            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/cancel_item"
            android:layout_toStartOf="@+id/cancel_item" />
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/close"
            android:id="@+id/cancel_item"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:onClick="cancelItem"/>
    </RelativeLayout>
</LinearLayout>