<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/primary_light"
        android:id="@+id/productDetail">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="5dp">
            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/prodDetLoading"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="visible"
                app:indicator="BallTrianglePath"
                app:indicator_color="@color/primary_text"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:scaleType="centerInside"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/productImg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/productName"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_alignTop="@+id/productImg"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/productImg"
                android:layout_toEndOf="@+id/productImg"
                android:textColor="@color/primary_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/primary_text"
                android:text=""
                android:id="@+id/productNo"
                android:layout_below="@+id/productName"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/productName"
                android:layout_alignStart="@+id/productName"
                android:gravity="end"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/primary_text"
                android:text=""
                android:id="@+id/productPrice"
                android:layout_below="@+id/productNo"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/productImg"
                android:layout_toEndOf="@+id/productImg"
                android:gravity="end"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>